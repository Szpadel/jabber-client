<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connect_ip" android:layout_gravity="center" android:singleLine="true"
            android:hint="Server IP"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/connect_pass" android:layout_gravity="center" android:hint="Password"
            android:password="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/connect_login_button" android:layout_gravity="center" android:clickable="true"
            android:longClickable="false" android:onClick="connect"/>
</LinearLayout>